<UserControl x:Class="ShutdownTimer.BalloonFiveMin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShutdownTimer"
             mc:Ignorable="d" d:DesignWidth="800" Width="400" Height="81.419">
    <Grid  Width="400" MouseDown="Grid_MouseDown">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Label Content="5 min remaining!" Margin="75,0,0,0" VerticalAlignment="Top" Height="60" FontSize="36" HorizontalAlignment="Left" Width="289"/>
        <Image HorizontalAlignment="Right" Height="60" VerticalAlignment="Bottom" Width="60" Source="Resources/timer.ico" Margin="0,0,330,10"/>
        <Label Content="Click here to open the timer" HorizontalAlignment="Left" Margin="75,39,0,0" VerticalAlignment="Top" Width="215" FontSize="16"/>
    </Grid>
</UserControl>
